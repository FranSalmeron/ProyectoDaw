{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ car.brand }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>Manufacture_year</th>
                <td>{{ car.manufactureYear }}</td>
            </tr>
            <tr>
                <th>Mileage</th>
                <td>{{ car.mileage }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ car.price }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ car.color }}</td>
            </tr>
            <tr>
                <th>FuelType</th>
                <td>{{ car.fuelType }}</td>
            </tr>
            <tr>
                <th>Transmission</th>
                <td>{{ car.transmission }}</td>
            </tr>
            <tr>
                <th>Traction</th>
                <td>{{ car.traction }}</td>
            </tr>
            <tr>
                <th>Doors</th>
                <td>{{ car.doors }}</td>
            </tr>
            <tr>
                <th>Seats</th>
                <td>{{ car.seats }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ car.description }}</td>
            </tr>
            <tr>
                <th>Publication_date</th>
                <td>{{ car.publicationDate ? car.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CarCondition</th>
                <td>{{ car.CarCondition }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ car.images ? car.images|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>CarSold</th>
                <td>{{ car.CarSold ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_car_index') }}">back to list</a>

    <a href="{{ path('app_car_edit', {'id': car.id}) }}">edit</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
